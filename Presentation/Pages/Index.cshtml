@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container border mb-3" style="padding: 20px;">
    <form method="post">
        <div class="mb-3 row">
            <div class="col-2">
                <label class="form-label" asp-for="NucleicAcid.Bases"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="NucleicAcid.Bases" class="form-control" autocomplete="off"/>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <input type="checkbox" asp-for="NucleicAcid.IsRNA" class="form-check-label" />
                <label class="form-label" asp-for="NucleicAcid.IsRNA"></label>
            </div>
            <div class="col-5">
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-outline-primary" value="Submit" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>
<div class="alert alert-secondary">
    @Model.AminoAcids
</div>
